<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.ShoppingHistoryFragment">



    <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:padding="16dp"
    >

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
            >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/productPhotoImageView"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/productNameTextView"
                        android:layout_toEndOf="@+id/productPhotoImageView"
                        android:layout_alignParentTop="true"
                        android:textSize="30sp"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderDateTextView"
                        android:layout_toEndOf="@+id/productPhotoImageView"
                        android:layout_below="@+id/productNameTextView"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amountPaidTextView"
                        android:layout_toEndOf="@+id/productPhotoImageView"
                        android:layout_below="@+id/orderDateTextView"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderPaymentTextView"
                        android:layout_toEndOf="@+id/productPhotoImageView"
                        android:layout_below="@+id/amountPaidTextView"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/orderCodeTextView"
                        android:layout_toEndOf="@+id/productPhotoImageView"
                        android:layout_below="@+id/orderPaymentTextView"
                />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>